#include "main.h"

/**
*
*
*
*/

void times_table(void)
{
  int col, row, a, b, c, d, u;
  row = 9;
  col = 9;
 
for (a = 0; a <= row; a++)
{
for (b = 0; b <= col; b++)
{
c = a * b;
if (c > 9)
{
u = c % 10;
d = (c - u) / 10;
_putchar(44);
_putchar(32);
_putchar(d + '0');
_putchar(u + '0');
}
else
{
if (col != 0)
{
_putchar(44);
_putchar(32);
_putchar(32);
}
_putchar(c + '0');
}
}
_putchar('\n');
}
}
